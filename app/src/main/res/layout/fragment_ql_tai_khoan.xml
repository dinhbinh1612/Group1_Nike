<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách thành viên"
        android:textAllCaps="true"
        android:textColor="#FF0000"
        android:textSize="21dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:background="@drawable/custom_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:backgroundTint="#A1CCC2">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản quản lý"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#3F51B5"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/admin"
            android:id="@+id/ivAdmin"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:backgroundTint="#B8D8DC">
        <TextView
            android:textColor="#3F51B5"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản khách hàng"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/ivUser"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/user"/>
    </LinearLayout>

</LinearLayout>